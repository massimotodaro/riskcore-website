# Supabase (source of truth for all data)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# MailerLite Integration (for email campaigns)
# Get your API key from: https://dashboard.mailerlite.com/integrations/api
MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_GROUP_ID=optional_group_id_here

# Resend (for email notifications)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
NOTIFICATION_EMAIL=your-email@example.com

# Tawk.to Chat Widget with AI Bot (optional)
# Get your IDs from: https://dashboard.tawk.to → Administration → Chat Widget
# The embed code looks like: https://embed.tawk.to/PROPERTY_ID/WIDGET_ID
NEXT_PUBLIC_TAWKTO_PROPERTY_ID=your_tawkto_property_id_here
NEXT_PUBLIC_TAWKTO_WIDGET_ID=your_tawkto_widget_id_here

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
